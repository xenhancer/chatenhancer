{
  "manifest_version": 3,
  "name": "ChatGPT Page Enhancer",
  "version": "1.0.0",
  "description": "Adds extra UI and functions to the ChatGPT website.",
  "permissions": [],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "chatgpt-page-enhancer@example.com"
    }
  },
  "action": {
    "default_title": "ChatGPT Enhancer"
  }
}


